<%- include('header'); -%>

<div class="eleven-heading">
    <p style="margin-top:7rem;">Change Password</p>
    <hr>
</div>
<div class="forms">
    <form action="/changepassword" method="POST">
        <div class="form-group">
            <label for="exampleInputEmail">Password</label>
            <input class="form-control" type="password" name="password" pattern=".{8,16}" title="use min 8 characters maximum 16 charters containing !@#$%^&* a-z A-Z 0-9" size=30 pattern="[!@#$%^&*][a-z][A-Z][0-9]" required>
          </div>
          <div class="form-group">
            <label for="exampleInputEmail">Confirm Password</label>
            <input class="form-control" type="password" name="confirmPassword" pattern=".{8,16}" title="use min 8 characters maximum 16 charters containing !@#$%^&* a-z A-Z 0-9" size=30 pattern="[!@#$%^&*][a-z][A-Z][0-9]" required>
          </div>
          <div class="form-group">
            <input type="hidden" class="form-control" name="user_id" value="<%= user_id %>">
          </div>    
          <div class="form-group">
            <input type="hidden" class="form-control" name="user_email" value="<%= user_email %>">
          </div>                 
        <button type="submit" class="btn classic-button">Reset Password</button>
    </form>
</div>




<%- include('footer'); -%>