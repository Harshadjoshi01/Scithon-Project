<div class="fact-card-container">
  <div class="fact-container-heading">
    <p>Some Science Facts</p>
  </div>
  <form action="/showfact" class="fact-card" method="POST">
    <img class="fact-card-img" src="images/facts/<%= facts[0].imgsrc %>" alt=<%= facts[0].factHeading %> />
    <div>
      <h3><%= facts[0].factHeading.toUpperCase() %></h3>
      <p><%= facts[0].factDiscription %> </p>
      <button class="btn  classic-button" type="submit" name="factId" value=<%= facts[0].factId %>>Read
        More</button>
    </div>
  </form>
  <% var no_of_facts = 0 %>
  <% if (facts.length > 5) { %>
  <% no_of_facts = 5 %>
  <% } else { %>
  <% no_of_facts = facts.length%>
  <% } %>
  <% for(var i=1; i < no_of_facts; i++) {%>
  <% if(i % 2 == 0) { %>
  <% var slide = "fade-right" %>
  <% } else { %>
  <% var slide = "fade-left" %>
  <% } %>
  <% const imgsrc = "images/facts/"+facts[i].imgsrc %>
  <% const factHeading = facts[i].factHeading.toUpperCase() %>
  <% const factId = facts[i].factId %>
  <% const factDiscription = facts[i].factDiscription %>
  <form action="/showfact" class="fact-card" data-aos=<%= slide %> method="POST">
    <img class="fact-card-img" src=<%= imgsrc %> alt=<%= factHeading %> />
    <div>
      <h3><%= factHeading %></h3>
      <p><%= factDiscription %> </p>
      <button class="btn classic-button" type="submit" name="factId" value=<%= factId %>>Read
        More</button>
    </div>
  </form>
  <% } %>
</div>
